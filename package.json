{
  "name": "react-theme-master",
  "version": "0.1.1",
  "description": "A flexible, feature-rich theme management system for React applications with Tailwind CSS support",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest --passWithNoTests",
    "lint": "eslint . --ext .ts,.tsx",
    "prepublishOnly": "npm run build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/georgedevs/react-theme-master.git"
  },
  "keywords": [
    "react",
    "theme",
    "tailwind",
    "dark-mode",
    "theme-switcher",
    "theming",
    "css",
    "typescript"
  ],
  "author": "Ukoh-Godwin George <gukohgodwin@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/georgedevs/react-theme-master/issues"
  },
  "homepage": "https://github.com/georgedevs/react-theme-master#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "jest": "^29.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rollup": "^2.79.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  }
}
